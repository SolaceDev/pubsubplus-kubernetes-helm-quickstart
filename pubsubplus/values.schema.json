{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "image": {
            "type": "object",
            "properties": {
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "securityContext": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "fsGroup": {
                    "type": "integer"
                },
                "runAsUser": {
                    "type": "integer"
                }
            }
        },
        "service": {
            "type": "object",
            "properties": {
                "ports": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "containerPort": {
                                "type": "integer"
                            },
                            "name": {
                                "type": "string"
                            },
                            "protocol": {
                                "type": "string"
                            },
                            "servicePort": {
                                "type": "integer"
                            }
                        }
                    }
                },
                "type": {
                    "type": "string"
                }
            }
        },
        "serviceAccount": {
            "type": "object",
            "properties": {
                "create": {
                    "type": "boolean"
                }
            }
        },
        "solace": {
            "type": "object",
            "properties": {
                "redundancy": {
                    "type": "boolean"
                },
                "size": {
                    "type": "string"
                },
                "usernameAdminPassword": {
                    "type": "null"
                }
            }
        },
        "storage": {
            "type": "object",
            "properties": {
                "persistent": {
                    "type": "boolean"
                },
                "size": {
                    "type": "string"
                }
            }
        },
        "tls": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            }
        }
    }
}
